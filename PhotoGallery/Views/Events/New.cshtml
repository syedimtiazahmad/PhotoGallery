@model PhotoGallery.ViewModels.EventFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Event</h2>

<div class="row">
    @using (Html.BeginForm("Create", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Event.Name)<br />
            @Html.TextBoxFor(m => m.Event.Name, new { @class="form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Event.location)<br />
            @Html.TextBoxFor(m => m.Event.location, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Event.Description)<br />
            @Html.TextAreaFor(m => m.Event.Description, new { @class = "form-control" })            
        </div>
        @Html.Hidden("Event.UserId", Session["user_id"])
        <div class="form-group">
            @Html.LabelFor(m => m.Event.Images)
            <input type="file" name="UploadedImages" multiple/>
        </div><br />
        <button class="btn btn-primary" type="submit">Create</button>
    }    
</div>